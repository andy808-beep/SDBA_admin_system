{
  "project": {
    "name": "Stanley Dragon Boat Association App",
    "shortName": "SDBA App",
    "version": "0.1.0",
    "description": "A Next.js application for Stanley Dragon Boat Association with authentication and role-based access control",
    "type": "web-application",
    "framework": "Next.js",
    "language": "TypeScript"
  },
  "technical": {
    "framework": {
      "name": "Next.js",
      "version": "15.4.5",
      "features": ["App Router", "Server Components", "Middleware"]
    },
    "react": {
      "version": "19.1.0",
      "features": ["Server Components", "Client Components"]
    },
    "typescript": {
      "version": "^5",
      "enabled": true
    },
    "styling": {
      "framework": "Tailwind CSS",
      "version": "3.4.17",
      "postcss": "8.5.6",
      "features": ["Utility-first", "Dark mode support", "Custom variables"]
    },
    "backend": {
      "provider": "Supabase",
      "version": "^2.55.0",
      "features": ["Authentication", "Database", "Real-time subscriptions"]
    }
  },
  "structure": {
    "architecture": "App Router",
    "routing": {
      "type": "file-based",
      "routes": [
        {
          "path": "/",
          "component": "Home",
          "description": "Landing page with navigation"
        },
        {
          "path": "/auth",
          "component": "Authentication",
          "description": "Login page with role-based redirect",
          "protected": false
        },
        {
          "path": "/admin",
          "component": "Admin Dashboard",
          "description": "Admin-only dashboard",
          "protected": true,
          "role": "admin"
        },
        {
          "path": "/dashboard",
          "component": "User Dashboard",
          "description": "User dashboard",
          "protected": true,
          "role": "user"
        }
      ]
    },
    "middleware": {
      "enabled": true,
      "protectedPaths": ["/admin", "/dashboard"],
      "authCookie": "sb-access-token",
      "redirectPath": "/auth"
    }
  },
  "authentication": {
    "provider": "Supabase",
    "methods": ["email/password"],
    "features": [
      "Role-based access control",
      "Session management",
      "Protected routes",
      "Automatic redirects"
    ],
    "roles": ["admin", "user"],
    "sessionStorage": "cookie-based"
  },
  "development": {
    "scripts": {
      "dev": "next dev --turbopack",
      "build": "next build",
      "start": "next start",
      "lint": "next lint"
    },
    "features": [
      "Hot reload with Turbopack",
      "TypeScript support",
      "ESLint integration",
      "Path aliases (@/*)"
    ],
    "devDependencies": [
      "@types/node",
      "@types/react",
      "@types/react-dom",
      "autoprefixer",
      "postcss",
      "tailwindcss"
    ]
  },
  "deployment": {
    "platform": "Vercel (recommended)",
    "requirements": [
      "Node.js 18+",
      "Environment variables for Supabase"
    ],
    "environmentVariables": [
      "NEXT_PUBLIC_SUPABASE_URL",
      "NEXT_PUBLIC_SUPABASE_ANON_KEY"
    ]
  },
  "features": {
    "authentication": {
      "enabled": true,
      "provider": "Supabase",
      "features": [
        "Email/password login",
        "Role-based redirects",
        "Session persistence",
        "Protected route middleware"
      ]
    },
    "styling": {
      "framework": "Tailwind CSS v4",
      "features": [
        "Utility-first CSS",
        "Dark mode support",
        "Custom theme variables",
        "Responsive design"
      ]
    },
    "errorHandling": {
      "errorBoundary": "Global error boundary",
      "notFound": "Custom 404 page",
      "features": ["Error reset functionality", "User-friendly messages"]
    }
  },
  "configuration": {
    "files": [
      "next.config.ts",
      "tsconfig.json",
      "tailwind.config.ts",
      "postcss.config.mjs",
      "middleware.ts"
    ],
    "environment": {
      "required": [
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY"
      ],
      "optional": []
    }
  },
  "git": {
    "branch": "nextjs",
    "status": "clean",
    "upToDate": true
  },
  "dependencies": {
    "production": [
      "@supabase/supabase-js",
      "next",
      "react",
      "react-dom"
    ],
    "development": [
      "@tailwindcss/postcss",
      "@types/node",
      "@types/react",
      "@types/react-dom",
      "autoprefixer",
      "postcss",
      "tailwindcss",
      "typescript"
    ]
  },
  "metadata": {
    "title": "Create Next App",
    "description": "Generated by create next app",
    "fonts": ["Geist Sans", "Geist Mono"],
    "language": "en"
  }
}